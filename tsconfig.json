{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules", "dist"]
}
